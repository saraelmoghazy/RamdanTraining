<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.AnimationApp.AnimationShape.AnimShapeFragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/scale_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="scale"
        app:layout_constraintEnd_toStartOf="@+id/fade_btn"
        app:layout_constraintStart_toStartOf="@+id/guideline29"
        app:layout_constraintTop_toBottomOf="@+id/rotate_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/color_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="sky color"
        app:layout_constraintEnd_toStartOf="@+id/guideline30"
        app:layout_constraintStart_toStartOf="@+id/guideline29"
        app:layout_constraintTop_toBottomOf="@+id/scale_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fade_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="fade"
        app:layout_constraintEnd_toStartOf="@+id/guideline30"
        app:layout_constraintStart_toEndOf="@+id/scale_btn"
        app:layout_constraintTop_toTopOf="@+id/scale_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rotate_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Rotate"
        app:layout_constraintEnd_toStartOf="@+id/translate_btn"
        app:layout_constraintStart_toStartOf="@+id/guideline29"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/translate_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="translate"
        app:layout_constraintEnd_toStartOf="@+id/guideline30"
        app:layout_constraintStart_toEndOf="@+id/rotate_btn"
        app:layout_constraintTop_toTopOf="@+id/rotate_btn" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="553dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline30"
        app:layout_constraintStart_toStartOf="@+id/guideline29"
        app:layout_constraintTop_toBottomOf="@+id/color_btn">

        <ImageView
            android:id="@+id/android_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_android" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>