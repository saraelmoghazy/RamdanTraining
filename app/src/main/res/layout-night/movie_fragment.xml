<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGrayColor">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".View.MovieScreen.MovieFragment">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_125sdp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="673dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline23"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Beauty and the Beast"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toStartOf="@+id/imageView6"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="March 2017 PG 129 minutes"
                app:layout_constraintEnd_toStartOf="@+id/guideline25"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_bookmark_border"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintEnd_toStartOf="@+id/guideline25"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signup_btn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="rent from R29.99"
                android:textColor="@color/WhiteColor"
                app:cornerRadius="@dimen/_16sdp"
                app:layout_constraintEnd_toStartOf="@+id/signup_btn2"
                app:layout_constraintStart_toStartOf="@+id/guideline23"
                app:layout_constraintTop_toTopOf="@+id/guideline26" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signup_btn2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="buy from R129.99"
                android:textColor="@color/WhiteColor"
                app:cornerRadius="@dimen/_16sdp"
                app:layout_constraintEnd_toStartOf="@+id/guideline25"
                app:layout_constraintStart_toEndOf="@+id/signup_btn"
                app:layout_constraintTop_toTopOf="@+id/signup_btn" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="191dp" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height=".3dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/DarkGrayColor"
                app:layout_constraintEnd_toStartOf="@+id/guideline25"
                app:layout_constraintStart_toStartOf="@+id/guideline23"
                app:layout_constraintTop_toBottomOf="@+id/signup_btn" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height=".3dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/DarkGrayColor"
                app:layout_constraintEnd_toStartOf="@+id/guideline25"
                app:layout_constraintStart_toStartOf="@+id/guideline23"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="@dimen/_16sdp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintDimensionRatio="w,65:65"
                app:layout_constraintEnd_toStartOf="@+id/avatar_img2"
                app:layout_constraintStart_toStartOf="@+id/guideline23"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_img2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="@dimen/_16sdp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintDimensionRatio="w,65:65"
                app:layout_constraintEnd_toStartOf="@+id/avatar_img3"
                app:layout_constraintStart_toEndOf="@+id/avatar_img"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_img3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="@dimen/_16sdp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintDimensionRatio="w,65:65"
                app:layout_constraintEnd_toStartOf="@+id/avatar_img4"
                app:layout_constraintStart_toEndOf="@+id/avatar_img2"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_img4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="@dimen/_16sdp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintDimensionRatio="w,65:65"
                app:layout_constraintEnd_toStartOf="@+id/guideline25"
                app:layout_constraintStart_toEndOf="@+id/avatar_img3"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="222 Rating"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="@+id/avatar_img"
                app:layout_constraintStart_toStartOf="@+id/avatar_img"
                app:layout_constraintTop_toBottomOf="@+id/avatar_img" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="family"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="@+id/avatar_img2"
                app:layout_constraintStart_toStartOf="@+id/avatar_img2"
                app:layout_constraintTop_toBottomOf="@+id/avatar_img2" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="71%"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="@+id/avatar_img3"
                app:layout_constraintStart_toStartOf="@+id/avatar_img3"
                app:layout_constraintTop_toBottomOf="@+id/avatar_img3" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Similar"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="@+id/avatar_img4"
                app:layout_constraintStart_toStartOf="@+id/avatar_img4"
                app:layout_constraintTop_toBottomOf="@+id/avatar_img4" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:gravity="center_horizontal"
                android:text="Disney's Beauty and the Beast is a live-action re-telling of the studio's animated classic which refashions the classic characters from the tale as old as time for a contemporary audience, staying true to the original music while updating the score with several new songs."
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintEnd_toStartOf="@+id/guideline25"
                app:layout_constraintStart_toStartOf="@+id/guideline23"
                app:layout_constraintTop_toBottomOf="@+id/view2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>